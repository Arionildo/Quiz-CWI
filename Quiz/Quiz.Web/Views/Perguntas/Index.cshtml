@model IEnumerable<Quiz.Web.Pergunta>

@{
    ViewBag.Title = "Perguntas";
}

<h2>Perguntas</h2>

<p>
    @Html.ActionLink("Criar nova", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Questao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.erradoA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.erradoB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.erradoC)
        </th>
        <th>
            Categoria
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Questao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resposta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.erradoA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.erradoB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.erradoC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria_Id)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary dis" })
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info dis" }) 
            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger dis" })
        </td>
    </tr>
}

</table>
