@model IEnumerable<Quiz.Web.Categoria>

@{
    ViewBag.Title = "Lista de categorias";
}

<h2>Lista de categorias</h2>

<p>
    @Html.ActionLink("Criar nova", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalhes","Details",  new { id = item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Deletar","Delete",  new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
